{{#if updateCommentForm}}
<div class="col-md-6 col-md-offset-3">
  <div>
    <form>
      <div class="form-group">
        {{textarea cols="80" rows="4" value=comment.body id="body"}}
      </div>
      <button class="btn btn-sm btn-primary" {{action 'update' comment}}>Save</button>
    </form>
  </div>
</div>
{{else}}
<button class="btn btn-sm btn-primary" name="editbtn" {{action 'showCommentForm'}}>Edit</button>
{{/if}}
<button name="delete" class="btn btn-small btn-warning" {{action 'deleteComment' comment}}>Delete</button>
