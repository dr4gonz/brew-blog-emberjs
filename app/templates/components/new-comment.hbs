{{#if addNewComment}}
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="body">Comment</label>
        {{textarea cols="100" rows="4" value=body id="body"}}
      </div>
      <button {{action 'saveComment'}}>Save</button>
    </form>
  </div>
{{else}}
    <button {{action 'commentFormShow'}}>New Comment</button>
{{/if}}
